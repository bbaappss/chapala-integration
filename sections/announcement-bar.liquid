{%- for block in section.blocks -%}
  {%- case block.type -%}
    {%- when 'announcement' -%}

      <div class="announcement-bar small-hide color-{{ block.settings.color_scheme }} gradient" role="region" aria-label="{{ 'sections.header.announcement' | t }}" {{ block.shopify_attributes }}>
        {%- if block.settings.text_desktop != blank -%}
          {%- if block.settings.desktop_link != blank -%}
            <a href="{{ block.settings.desktop_link }}" class="announcement-bar__link link link--text focus-inset animate-arrow">
          {%- endif -%}
              <p class="announcement-bar__message small-hide">
                {{ block.settings.text_desktop | escape }}
                {%- if block.settings.desktop_link != blank -%}
                  {% render 'icon-arrow' %}
                {%- endif -%}
              </p>
          {%- if block.settings.desktop_link != blank -%}
            </a>
          {%- endif -%}
        {%- endif -%}
      </div>      

      <div class="announcement-bar medium-hide large-up-hide color-{{ block.settings.color_scheme }} gradient" role="region" aria-label="{{ 'sections.header.announcement' | t }}" {{ block.shopify_attributes }}>
        {%- if block.settings.text_mobile != blank -%}
          {%- if block.settings.mobile_link != blank -%}
            <a href="{{ block.settings.mobile_link }}" class="announcement-bar__link link link--text focus-inset animate-arrow">
          {%- endif -%}
              <p class="announcement-bar__message medium-hide large-up-hide">
                {{ block.settings.text_mobile | escape }}
                {%- if block.settings.mobile_link != blank -%}
                  {% render 'icon-arrow' %}
                {%- endif -%}
              </p>
          {%- if block.settings.mobile_link != blank -%}
            </a>
          {%- endif -%}
        {%- endif -%}
      </div>
  {%- endcase -%}
{%- endfor -%}

{% schema %}
{
  "name": "t:sections.announcement-bar.name",
  "max_blocks": 12,
  "blocks": [
    {
      "type": "announcement",
      "name": "t:sections.announcement-bar.blocks.announcement.name",
      "settings": [
        {
          "type": "text",
          "id": "text_desktop",
          "label": "Desktop text"
        },
        {
          "type": "text",
          "id": "text_mobile",
          "label": "Mobile text"
        },
        {
          "type": "select",
          "id": "color_scheme",
          "options": [
            {
              "value": "accent-1",
              "label": "t:sections.all.colors.accent_1.label"
            },
            {
              "value": "accent-2",
              "label": "t:sections.all.colors.accent_2.label"
            },
            {
              "value": "accent-3",
              "label": "t:sections.all.colors.accent_3.label"
            },
            {
              "value": "background-1",
              "label": "t:sections.all.colors.background_1.label"
            },
            {
              "value": "background-2",
              "label": "t:sections.all.colors.background_2.label"
            },
            {
              "value": "background-3",
              "label": "t:sections.all.colors.background_3.label"
            },
            {
              "value": "inverse",
              "label": "t:sections.all.colors.inverse.label"
            }
          ],
          "default": "accent-1",
          "label": "t:sections.all.colors.label"
        },
        {
          "type": "url",
          "id": "desktop_link",
          "label": "Desktop link"
        },
        {
          "type": "url",
          "id": "mobile_link",
          "label": "Mobile link"
        }
      ]
    }
  ],
  "default": {
    "blocks": [
      {
        "type": "announcement"
      }
    ]
  }
}
{% endschema %}
