{%- if section.settings.menu != blank -%}
  <ul class="footer-block__details-content list-unstyled small-print-menu">
    {%- for link in section.settings.menu.links -%}
      <li>
        <a href="{{ link.url }}" class="link link--text list-menu__item list-menu__item--link{% if link.active %} list-menu__item--active{% endif %}">
          {{ link.title }}
        </a>
      </li>
    {%- endfor -%}
  </ul>
{% endif %}

<p class="copyright">
    <span>â’¸</span>
    <span>{{ "now" | date: "%Y" }}</span>
    <span>{{ section.settings.copyright_text }}</span>
</p>

{% schema %}
    {
        "name": "Footer Small Print",
        "settings": [
            {
                "type": "link_list",
                "id": "menu",
                "label": "Menu"
            },
            {
                "type": "text",
                "id": "copyright_text",
                "label": "Copyright Text"
            }
        ]
    }
{% endschema %}